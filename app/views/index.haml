#mpd-info

#mpd-buttons.btn-group
  %a.mpd_control{:href => 'javascript:;', "data-action" => "prev"}
    %i.icon-backward
  %a.mpd_control{:href => 'javascript:;', "data-action" => "play", "data-clear" => "true", "data-toggle" => "true"}
    %i.icon-play
  %a.mpd_control{:href => 'javascript:;', "data-action" => "pause", "data-clear" => "true", "data-toggle" => "true"}
    %i.icon-pause
  %a.mpd_control{:href => 'javascript:;', "data-action" => "stop", "data-clear" => "true", "data-toggle" => "true"}
    %i.icon-stop
  %a.mpd_control{:href => 'javascript:;', "data-action" => "next"}
    %i.icon-forward
  %a.mpd_volume{:href => 'javascript:;', 'data-volume' => 'down'}
    %i.icon-volume-down
  %a.mpd_volume{:href => 'javascript:;', 'data-volume' => 'up'}
    %i.icon-volume-up
  %a.mpd_update{:href => 'javascript:;'}
    %i.icon-repeat

#mpd-playlist

%div.alert.alert-info
  %i.icon-remove.pull-right.close
  %p.alert-message

%script#tmpl-mpd-info{:type => "html/template"}
  %h1 {{= data['title'] }}
  %h2 {{= data['artist'] }}
  %h3 {{= data['album'] }}
  / .span3#progress-bar
  /   .progress.progress-striped.active
  /     .bar{:style => "width: {{= data['song_elapsed'] }};"}

%script#tmpl-mpd-playlist{:type => "html/template"}
  {{ _.each(data, function(song, index){ }}
  %p {{= song['artist'] }} - {{= song['title'] }}
  {{ }) }}
